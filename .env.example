# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=data_warehouse
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_SCHEMA=public

# AWS Configuration (for S3 data sources)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_DEFAULT_REGION=us-east-1

# S3 Bucket Configuration
S3_BUCKET=your-data-bucket
S3_PREFIX=raw-data/

# MinIO Configuration (S3-compatible local storage)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=data-pipeline

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Pipeline Configuration
PIPELINE_ENV=development
LOG_LEVEL=INFO
PIPELINE_BATCH_SIZE=1000
PIPELINE_MAX_WORKERS=4
PIPELINE_RETRY_ATTEMPTS=3

# Queue Database Path
QUEUE_DB_PATH=data/queue.db

# Data Quality Thresholds
DQ_MIN_COMPLETENESS=0.8
DQ_MAX_DUPLICATES=0.05
DQ_OUTLIER_THRESHOLD=3.0

# Monitoring & Alerting
ENABLE_MONITORING=true
ALERT_EMAIL=your-email@example.com
SLACK_WEBHOOK_URL=your_slack_webhook

# Spark Configuration
SPARK_MASTER=local[*]
SPARK_DRIVER_MEMORY=2g
SPARK_EXECUTOR_MEMORY=2g

# Development Settings
DEBUG=false
PROFILE_MEMORY=false